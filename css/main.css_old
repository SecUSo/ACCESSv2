/*
 * General
 */
body {
  padding-bottom: 20px;
  color: Black;
  border-color: SteelBlue;
}
h1,
h2,
h3,
h4 {
  color: MidnightBlue;
}
.navbar a {
  color: MidnightBlue;
}
.navbar-brand {
  padding: 0 15px;
}
/* Sidebar modules for boxing content */
.sidebar-module {
  padding: 15px;
  margin: 0 -15px 15px;
}
.sidebar-module-inset {
  padding: 15px;
  background-color: LightGrey;
  border-radius: 4px;
}
.sidebar-module-inset p:last-child,
.sidebar-module-inset ul:last-child,
.sidebar-module-inset ol:last-child {
  margin-bottom: 0;
}
/*
 * Footer
 */
.footer {
  padding: 40px 0;
  color: Black;
  text-align: center;
  background-color: LightGrey;
  border-top: 1px solid SteelBlue;
}
.footer p:last-child {
  margin-bottom: 0;
}
.active {
  display: block !important;
}
/*
 * Decision Platform
 */
#decision_platform .category_DP,
#decision_platform .feature_DP,
#decision_platform .subfeature_DP {
  padding: 7px;
  border: 1px solid black;
  margin: 7px;
}
#decision_platform #container {
  position: fixed !important;
  margin: 0 auto;
  left: 10%;
  top: 0;
  background-color: #cccccc;
  border: 1px solid #5e5e5e;
  display: none;
  z-index: 1002;
  padding: 20px;
}
/*
   * Admin Panel
   */
.content-wrap {
  padding: 20px;
}
.clickable-row:hover {
  cursor: pointer;
}
#system-container {
  padding: 20px;
}
.removeAuth {
  float: left;
  width: 33%;
}
.authName {
  float: left;
  width: 33%;
}
.authCat {
  float: left;
  width: 33%;
}
.ui-button {
  margin-top: 20px;
}
.authSelection span:hover {
  cursor: pointer;
  color: #ccc;
}
#authsubfeature .category {
  float: left;
  width: 33%;
  padding: 10px;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
}
#authsubfeature .feature {
  margin-left: 20px;
  font-size: 14px;
  font-weight: bold;
  margin-bottom: 10px;
}
#authsubfeature .subfeature {
  margin-left: 40px;
  margin-bottom: 5px;
  font-size: 12px;
  font-weight: normal;
}
#authscalevalues .category {
  font-size: 18px;
  font-weight: bold;
  float: left;
  width: 33%;
}
#authscalevalues .feature {
  margin-left: 20px;
  font-weight: normal;
  font-size: 14px;
}
#authscalevalues .feature:hover {
  cursor: pointer;
  color: #ccc;
}
#classifyauth .category {
  font-size: 18px;
  font-weight: bold;
  float: left;
  width: 33%;
}
#classifyauth .feature {
  margin-left: 20px;
  font-weight: normal;
  font-size: 14px;
}
#classifyauth .feature:hover {
  cursor: pointer;
  color: #ccc;
}
#classifyauth .feat-class:hover {
  cursor: pointer;
  color: #ccc;
}
#helpBox {
  display: none;
  position: fixed;
  width: 80%;
  height: 40%;
  background-color: white;
  padding: 5%;
  border: 1px solid black;
  z-index: 9001;
  margin: 0 auto;
  overflow: scroll;
}
.glyphicon-hoverpointer:hover {
  cursor: pointer;
}
#logoverview #overlay {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  background: #000000;
  filter: alpha(opacity=60);
  -moz-opacity: .60;
  opacity: .60;
  display: none;
  overflow: auto!important;
}
#logoverview .feature {
  padding-left: 20px;
}
#logoverview .subfeature {
  padding-left: 20px;
}
#logoverview #container {
  position: fixed!important;
  position: absolute;
  width: 400px;
  height: 100%;
  margin: -100px 0px 0px -200px;
  top: 10%;
  left: 50%;
  background-color: #cccccc;
  border: 1px solid #5e5e5e;
  display: none;
  z-index: 1002;
  padding: 10px;
  overflow-y: scroll;
}
#decision_platform .glyphicon:hover {
  cursor: pointer;
}
